<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="MauiApp8.Views.GraphPage"
             x:DataType="viewmodel:GraphPageModel"
             xmlns:viewmodel="clr-namespace:MauiApp8.ViewModel"
             xmlns:lvcore="clr-namespace:LiveChartsCore;assembly=LiveChartsCore"
             xmlns:controls="clr-namespace:MauiApp8.Controls"
             Title="Graph">


    <VerticalStackLayout>
        <controls:NoInternetWarning />
        
        <lvc:CartesianChart 
            Series="{Binding Series}" 
            Title="{Binding Title}"
            HeightRequest="600"
            YAxes="{Binding YAxes}"
            XAxes="{Binding XAxes}"
            TooltipTextSize="50"
            EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.BounceOut}}"
            LegendPosition="Bottom"
            LegendTextPaint="{Binding LegendTextPaint}"
            LegendTextSize="45"
            LegendBackgroundPaint="{Binding LegendBackgroundPaint}">
        </lvc:CartesianChart>




    </VerticalStackLayout>
    
</ContentPage>