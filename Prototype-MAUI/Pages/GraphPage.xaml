<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:MauiApp8.ViewModel.GraphPageModel;assembly=MauiApp8.ViewModel.GraphPageModel"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="MauiApp8.Views.GraphPage"
             xmlns:viewmodel="clr-namespace:MauiApp8.ViewModel"
             x:DataType="viewmodel:GraphPageModel"
             Title="Graph">
             
    <VerticalStackLayout>
        <Label 
            Text="Testing text field"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid>
            <lvc:CartesianChart
                Series="{Binding Series}">
            </lvc:CartesianChart>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
