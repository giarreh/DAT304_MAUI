<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:MauiApp8"
    xmlns:views="clr-namespace:MauiApp8.Views"

    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarTitleColor="AliceBlue"
    >

 
    <TabBar>
        <ShellContent Title="Home"
                      Icon="dashboard.png"
                      ContentTemplate="{DataTemplate views:HomePage}"
                      Route="home" />
        <ShellContent Title="Food"
                      Icon="healthyfood.png"
                      ContentTemplate="{DataTemplate views:FoodPage}"
                      Route="Food" />
        <ShellContent Title="Graph"
                      Icon="barchart.png"
                      ContentTemplate="{DataTemplate views:GraphPage}"
                      Route="graph" />
        <ShellContent Title="Settings"
                      
                      Icon="settings.png"
                      ContentTemplate="{DataTemplate views:SettingsPage}"
                      Route="settings" />
    </TabBar>
    </Shell>
